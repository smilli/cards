<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/game.css' />
  </head>
  <body>   
    <div id="chat-wrapper">
      <div id="questionCard">
      </div>
      <div id="usersDiv">
       <ul id="users">
       </ul>
      </div>
      <div id="chat">
      </div>
      <form id="message-form" autocomplete="off">
        <input id="message" />
      </form>
    </div>
    <div id="game">
      <% if (active===false) { %> 
        <div id="fade"></div>
        <div id="overlay">
          <% if (typeof url !== 'undefined') { %>
            Waiting for at least 3 people!
            <br/> Share this link with your friends:
            <br/><span id="link"><%= url %></span>
          <% } else { %>
            <button id="start">START</button>
          <% } %>
        </div>
      <% } %>  
      <div id="description">
        <span id="desc-msg"></span>
        <span id="timer">2:00</span>
      </div>
      <div id="cards"></div>
      <div id="chosen-cards" class="no-hover"></div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src='http://code.jquery.com/jquery-1.8.0.min.js' type='text/javascript'></script>
    <script src="/javascripts/game.js"></script>
    <script src="/javascripts/game-ui.js"></script>
  </body>
</html>