questionHeight = 225px
headerHeight = 270px

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

box-shadow(n, color)
  -webkit-box-shadow: 2px 2px 2px 2px #A6A6A6;
  box-shadow: 2px 2px 2px 2px #A6A6A6;

* {
  box-sizing: border-box;
  -webkit-box-sizing:border-box;
  -moz-box-sizing: border-box;
}

html, body{
  padding: 0;
  margin: 0;
  font-family: Helvetica, Arial, sans-serif;
  background-color: #D8D8D8;
}

#fade{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: .85;
  z-index: 90;
}

#overlay{
  position: fixed;
  display: block;
  padding: 20px;
  margin: auto;
  width: 30%;
  height: 50%;
  left: 35%;
  top: 25%;
  background-color: #D8D8D8;
  -webkit-border-radius: 12px;
  border-radius: 12px;
  -webkit-box-shadow: 3px 3px 5px 3px #262626;
  box-shadow: 3px 3px 5px 3px #262626;
  color: #2E2E2E;
  z-index: 100;
  font-weight: 300;
  font-size: 2rem;
}

#link{
  color: #6E6E6E;
  font-size: 2.2rem;
}

#header{
  width: 100%;
  height: headerHeight;
  padding-top: (headerHeight / 2) - (questionHeight / 2);
  background-color: #fff;
  border-bottom: 1px solid #C8C8C8;
}

#header-wrap{
  width: 1000px;
  margin: auto;
}

#directions, #cards-won{
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 40px;
  font-weight: 100;
}

#directions{
  width: 42.5%;
  float: left;
  height: 100%;
}

#timer{
  font-size: 80px;
}

#question-card{
  float: left;
  position: relative;
  margin: auto;
  height: questionHeight;
  width: @height * 0.8;
  background-color: #000;
  border-radius(7px);
  font-size: 1.1rem;
  -webkit-box-shadow: 2px 2px 2px 2px #A6A6A6;
  box-shadow: 2px 2px 2px 2px #A6A6A6;
  color: #fff;
  padding: 1.2%;
  font-weight: 700;
}

#cards-won{
  text-align: right;
  float: right;
  height: 100%;
}


#cards{
  background-color: #D8D8D8;
  width: 75%;  
  float: left;
}

.card{
  padding: 1.2%;
  float: left;
  margin: 2% 1.5% 1% 1.5%;
  /* set width & height when adding cards in js */
  width: 17%;
  background-color: #fff;
  border-radius(10px);
  -webkit-box-shadow: 1px 1px 1px 1px #999999;
  box-shadow: 1px 1px 1px 1px #999999;
  font-size: 1.1rem;
  font-weight: 700;
}

#chat{
  float: left;
  width: 25%;
  height: 75%;
  position: relative;
  background-color: #fff;
}

#users{
  height: 25%;
  background-color: #FAFAFA;
  border-bottom: 1px solid #C8C8C8;
}

#messages{
  overflow: auto;
}

#send-message{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 30px;
}